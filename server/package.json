{
    "name": "chitchat-server",
    "version": "1.0.0",
    "description": "ChitChat v2 - LAN-based messaging server",
    "main": "src/index.js",
    "scripts": {
        "start": "NODE_ENV=production node src/index.js",
        "start:prod": "NODE_ENV=production node dist/index.js",
        "dev": "nodemon src/index.js",
        "certs": "node generateCerts.js",
        "build:client": "cd ../client && npm run build",
        "build:server": "ncc build src/index.js -o dist -m"
    },
    "keywords": [
        "chat",
        "messaging",
        "lan",
        "socket.io"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^3.0.3",
        "better-sqlite3": "^12.5.0",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "mkcert": "^3.2.0",
        "multer": "^2.0.2",
        "socket.io": "^4.8.3",
        "uuid": "^13.0.0",
        "web-push": "^3.6.7"
    },
    "devDependencies": {
        "nodemon": "^3.1.11",
        "@vercel/ncc": "^0.38.3"
    }
}